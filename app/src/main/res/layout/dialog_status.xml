<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to share files first turn on Wi-Fi and Location..."
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/wifi_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_wifi_off_24"
            app:tint="@color/black_2"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/wifi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Wi-Fi is off"
            android:textSize="16sp"
            android:layout_toEndOf="@id/wifi_icon"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/check_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_check_circle_24"
            app:tint="?colorPrimary"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <FrameLayout
            android:id="@+id/btn_wifi_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_line_button_color_bg"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="turn on Wi-Fi"
                android:textColor="?colorPrimary"
                android:textSize="14sp" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_location_off_24"
            app:tint="@color/black_2"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Location is off"
            android:textSize="16sp"
            android:layout_toEndOf="@id/location_icon"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/check_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_check_circle_24"
            app:tint="?colorPrimary"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <FrameLayout
            android:id="@+id/btn_location_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_line_button_color_bg"
            android:layout_alignParentEnd="true"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="turn on location"
                android:textColor="?colorPrimary"
                android:textSize="14sp" />

        </FrameLayout>


    </RelativeLayout>



</LinearLayout>